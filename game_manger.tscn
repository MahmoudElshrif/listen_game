script/source = "extends Node2D


#@export var games : Array[GameInfo]
@export var gamestate : GameState

var score : int
var curgame : MiniGame
var curgameinfo : GameInfo
var time :float= 3

func _on_mini_game_correct() -> void:
	#print(\"correct\")
	score += 1
	Global.gamestate.score = score
	$Label.text = str(score)
	$Timer.start()
	$correct.play()
	$heartbeat.play()
	gamestate.gamesplayed += 1
	flash_correct()
	load_next()

func flash_correct():
	$correctrect.color.a = 0.07
	create_tween().tween_property($correctrect,\"color:a\",0,0.1)

func _on_mini_game_wrong() -> void:
	#print(\"lose\")
	$music.stream_paused = true
	curgame.process_mode = Node.PROCESS_MODE_DISABLED
	$Label.text = str(score)
	var tween = create_tween()
	$death/ColorRect.color.a = 0.8
	tween.tween_property($death/ColorRect,\"color:a\",0,2).set_ease(Tween.EASE_OUT)
	tween.parallel().tween_property($Camera2D,\"rotation_degrees\",-5,1).set_trans(Tween.TRANS_QUART).set_ease(Tween.EASE_OUT)
	tween.parallel().tween_property($Camera2D,\"zoom\",Vector2(0.99,0.99),1).set_trans(Tween.TRANS_QUART).set_ease(Tween.EASE_OUT)
	$wrong.play()
	$clock.stop()
	$heartbeat.stop()
	$Timer.paused = true
	await $wrong.finished
	$death/losescreen.enter()
	#get_tree().change_scene_to_packed(LOSE)

func restart():
	load_level(curgameinfo)
	$music.stream_paused = false
	curgame.process_mode = Node.PROCESS_MODE_DISABLED
	$restart.play()
	score = 0
	Global.gamestate.score = score
	$Label.text = str(score)
	$death/ColorRect.color.a = 0
	var tween = create_tween()
	var easetype = Tween.EASE_OUT
	var easetime = 0.4
	tween.tween_property($Camera2D,\"rotation_degrees\",0,easetime).set_trans(Tween.TRANS_QUART).set_ease(easetype)
	tween.parallel().tween_property($Camera2D,\"zoom\",Vector2(1,1),easetime).set_trans(Tween.TRANS_QUART).set_ease(easetype)
	await get_tree().create_timer(0.1).timeout
	curgame.process_mode = Node.PROCESS_MODE_ALWAYS
	$clock.play()
	if(not Global.easymode):
		$heartbeat.play()
	$Timer.start()
	$Timer.paused = false

func load_next():
	#print(gamestate.gamesplayed)
	for i in gamestate.games:
		if(i.unlockat == gamestate.gamesplayed):
			gamestate.add(i)
	#var rand = randi_range(0,min(2,gamestate.gamestash.size() - 1))
	var rand = randi_range(0,floor((gamestate.gamestash.size() - 1) * 0.4))
	#print(rand)
	#print(gamestate.gamestash.size())
	#$fastclock.stop()
	var game : GameInfo = gamestate.gamestash[rand]
	curgameinfo = game
	gamestate.cyclegame(rand)
	load_level(game)


func load_level(game : GameInfo):
	if(curgame):
		curgame.queue_free()
	curgame = game.game.instantiate()
	add_child(curgame)
	var basetime = 6 if Global.easymode else 3
	var timedecrese = 10 if Global.easymode else 5
	time = max(1.15,basetime - (0.1 * int(score / timedecrese)))
	$Timer.start(time * game.timerscale)
	curgame.correct.connect(_on_mini_game_correct)
	curgame.wrong.connect(_on_mini_game_wrong)

func _ready() -> void:
	load_next()
	restart()
	#$heartbeat.play()
	#$clock.play()

func _physics_process(delta: float) -> void:
	$TimerBar.set_timer($Timer.time_left / $Timer.wait_time)
	$Bg.region_rect.position.x += 1
	$Bg.region_rect.position.y += 1
	$ColorRect.position.x = 1280 * ($Timer.time_left / $Timer.wait_time)
	if($Timer.time_left / $Timer.wait_time < 0.4):
		$clock.volume_db = lerp($clock.volume_db,-5.,0.1)
		$clock.pitch_scale = 1.3
	else:
		$clock.volume_db = -20
		$clock.pitch_scale = lerp($clock.pitch_scale,1.,0.1)
	
	$heartbeat.volume_db = min(-40 + score / 2.,-10)
	$heartbeat.pitch_scale = min(1 + score / 10.,1.5)
		

func _on_timer_timeout() -> void:
	curgame.timeout()
"

